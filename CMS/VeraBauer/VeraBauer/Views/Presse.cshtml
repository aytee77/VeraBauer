@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Presse>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "~/Views/shared/_Master.cshtml";
    var children = Model.Content.Children().Where("Visible");
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-1">
        <h1>@Umbraco.Field("titel")</h1>
    </div>
</div>
@foreach(var pressetext in children)
{
    <section class="row presse">
        <div class="col-sm-10 col-sm-offset-1">
            <div>
                <h2>@pressetext.GetPropertyValue("titel")</h2>
                <p class="lead">@pressetext.GetPropertyValue("untertitel")</p>
                @pressetext.GetPropertyValue("text")
            </div>
        </div>
    </section>
}